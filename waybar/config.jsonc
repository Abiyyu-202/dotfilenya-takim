{
    "reload_style_on_change": true,
    "height": 30,
    "spacing": 4,
    "expand-left": true,    // Biarkan modul kiri memenuhi ruang
    "expand-right": true,   // Biarkan modul kanan memenuhi ruang
    "fixed-center": true,   // Pusat tidak lagi kaku, bisa terdorong

    "modules-left": [
        "clock",
        "hyprland/workspaces",
        "hyprland/submap"
    ],

    "modules-center": [
        "custom/window-title"
    ],

    "modules-right": [
        "network",
        "pulseaudio",
        "battery",
        "power-profiles-daemon", // <-- icon power profile setelah baterai
        "tray",
        "custom/power"
    ],

    // Modules configuration
    "hyprland/workspaces": {
        "format": "{name}",
        "format-icons": {
            "active": "â—",
            "default": "â—‹",
            "urgent": "âš "
        },
        "on-click": "activate"
    },

    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "custom/window-title": {
        "exec": "~/.config/waybar/scripts/window-title.sh",
        "return-type": "json",
        "interval": 1,
        "max-length": 50
    },

    "clock": {
        "interval": 1,
        "format": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "cpu": {
        "interval": 0.1,
        "format": "{usage}% ï‹›",
        "tooltip": false
    },

    "memory": {
        "interval": 1,
        "format": "{}% ïƒ‰"
    },

    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}Â°C {icon}",
        "format-icons": ["ï‹‹", "ï‹Š", "ï‹‰", "ï‹ˆ"]
    },

    "battery": {
        "interval": 1,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "ï—§ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        "format-full": "ï‰€ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },

    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}",
        "format-icons": {
            "performance": "ğŸš€",
            "balanced": "âš–ï¸",
            "power-saver": "ğŸ’¡"
        }
    },

    "network": {
        "interval": 1,
        "format-wifi": "ï‡« {essid} ({signalStrength}%)",
        "format-ethernet": "ïœ€ {ifname}",
        "format-disconnected": "ïœ‚ Disconnected",
        "tooltip-format": "{ifname}\nIP: {ipaddr}\nStrength: {signalStrength}%"
    },

    "pulseaudio": {
        "interval": 5,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}ïŠ”",
        "format-muted": "ïš© Muted",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï–",
            "headset": "ï–",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol",
        "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
        "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%",
        "scroll-step": 5
    },

    "tray": {
        "spacing": 18
    },

    "custom/launcher": {
        "format": "ïŒŠ ", // logo aplikasi
        "on-click": "wofi --show drun", // buka aplikasi
        "tooltip": false
    },

    "custom/power": {
        "format": "â» ", // Ikon power
        "tooltip": false,
        "menu": "on-click", // munculin menunya
        "menu-file": "~/.config/waybar/power-menu.xml", // Path ke file menu
        "menu-actions": {
            "shutdown": "systemctl poweroff",
            "reboot": "systemctl reboot",
            "suspend": "systemctl suspend",
            "logout": "hyprctl dispatch exit"
        }
    }
}
