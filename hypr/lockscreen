#!/bin/bash

WALLPAPER=$(cat ~/.current_wallpaper)

swaylock -f -i "$WALLPAPER" \
  --effect-blur 7x5 \
  --effect-vignette 0.5:0.5 \
  --indicator \
  --indicator-radius 130 \
  --indicator-thickness 10 \
  --ring-color ffffff \
  --ring-ver-color E5E4E2 \
  --ring-wrong-color bf616a \
  --inside-color 000000aa \
  --inside-ver-color 000000cc \
  --inside-wrong-color 000000cc \
  --key-hl-color 333333 \
  --line-color 00000000 \
  --separator-color 00000000 \
  --text-color ffffff \
  --text-ver-color ffffff \
  --text-wrong-color bf616a \
  --clock \
  --timestr "%H:%M" \
  --datestr "%A, %d %B"
